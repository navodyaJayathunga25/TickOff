<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6FF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvSettingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient_purple"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Hydration Reminder Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:radius="14dp"
            android:elevation="4dp"
            android:padding="16dp"
            app:cardBackgroundColor="#6A0080">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Topic -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hydration_reminder"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="12dp" />

                <!-- Reminder Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_water_drop"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="12dp"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/reminder"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/switchHydration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/white"
                        android:trackTint="@color/white"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <!-- Interval Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_timer"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="12dp"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/interval"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/spinnerInterval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/hydration_intervals"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Dark Mode Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:radius="14dp"
            android:elevation="4dp"
            android:padding="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Dark Mode Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_dark_mode"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="12dp"
                        app:tint="#4A148C" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/dark_mode"
                        android:textSize="18sp"
                        android:textColor="#4A148C"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/switchDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/grey"
                        android:trackTint="@color/dark_purple"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <!-- Passcode Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_lock"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="12dp"
                        app:tint="#4A148C" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/passcode_lock"
                        android:textSize="18sp"
                        android:textColor="#4A148C"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/switchPasscode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/grey"
                        android:trackTint="@color/dark_purple"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <!-- Vibration Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_vibration"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="12dp"
                        app:tint="#4A148C" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/vibration_on_tap"
                        android:textSize="18sp"
                        android:textColor="#4A148C"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/switchVibration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/grey"
                        android:trackTint="@color/dark_purple"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <!-- Achievement Sound Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_music_note"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="12dp"
                        app:tint="#4A148C" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/achievement_sound"
                        android:textSize="18sp"
                        android:textColor="#4A148C"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/switchAchievementSound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/grey"
                        android:trackTint="@color/dark_purple"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <!-- Language Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_language"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="12dp"
                        app:tint="#4A148C" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/language"
                        android:textSize="18sp"
                        android:textColor="#5D3A96"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/spinnerLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/languages"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
